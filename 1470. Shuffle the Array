class Solution {
    public int[] shuffle(int[] nums, int n) {
        int[] ans = new int[nums.length];
        int i  =0;
        int j = n;
        int k = 0;
        while(i<n && j<2*n)
        {
            ans[k] = nums[i];
            k++;
            i++;
            ans[k] = nums[j];
            k++;j++;
            
        }
        
        return ans;
        
    }
}
